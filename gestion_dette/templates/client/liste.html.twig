{% extends 'base.html.twig' %}

{% block title %}Hello ClientController!
{% endblock %}

{% block body %}
	<!-- Sidebar -->
	<div class="flex">
		{% include("partials/sideBar.html.twig") %}
		<div class="bg-white p-6 rounded-lg shadow-md mt-8 w-[80%] mx-auto">
			<h3 class="text-xl font-semibold text-gray-700 mb-4">Gestion des Clients</h3>
			<div class="overflow-x-auto">
				<div class="mb-4  flex justify-end">
					<a href="{{path('client.store')}}" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
						<i class="fas fa-plus mr-2"></i>
						Ajouter un Client
					</a>
				</div>
				<table class="min-w-full table-auto border-collapse border border-gray-200">
					<thead class="bg-gray-100">
						<tr>
							<th class="py-2 px-4 border border-gray-200 text-left">Surnom</th>
							<th class="py-2 px-4 border border-gray-200 text-left">Téléphone</th>
							<th class="py-2 px-4 border border-gray-200 text-left">Adresse</th>
							<th class="py-2 px-4 border border-gray-200 text-left">Montant dû</th>
							<th class="py-2 px-4 border border-gray-200 text-center">Actions</th>
						</tr>
						<tr>
							<td class="py-2 px-4 border border-gray-200">
								<input type="text" placeholder="Rechercher par Surnom" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500">
							</td>
							<td class="py-2 px-4 border border-gray-200">
								<input type="text" placeholder="Téléphone" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500">
							</td>
							<td class="py-2 px-4 border border-gray-200">
								<input type="text" placeholder="Adresse" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500">
							</td>
							<td class="py-2 px-4 border border-gray-200 text-center">—</td>
							<td class="py-2 px-4 border border-gray-200 text-center">
								<button class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
									Filtrer
								</button>
							</td>
						</tr>
					</thead>
					<tbody>
						{% for client in clients %}
							<tr class="hover:bg-gray-50">
								<td class="py-2 px-4 border border-gray-200">{{ client.surnom }}</td>
								<td class="py-2 px-4 border border-gray-200">{{client.telephone}}</td>
								<td class="py-2 px-4 border border-gray-200">{{client.adresse}}</td>
								<td class="py-2 px-4 border border-gray-200">€1500</td>
								<td class="py-2 px-4 border border-gray-200 text-center">
									<button class="bg-yellow-500 text-white px-3 py-1 rounded-lg hover:bg-yellow-600">Modifier</button>
									<button class="bg-red-500 text-white px-3 py-1 rounded-lg hover:bg-red-600">Supprimer</button>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				<!-- Pagination -->
				{% include 'partials/pagination.html.twig' with {
        currentPage: pagination.getCurrentPage(),
        totalPages: pagination.getTotalPages(),
        hasPreviousPage: pagination.hasPreviousPage(),
        hasNextPage: pagination.hasNextPage(),
        route: route
    } %}
			</div>

		</div>
	</div>

{% endblock %}
