<div id="user-form">
	{{ form_start(form, { attr: { 'data-turbo-frame': 'user-form-frame' } }) }}

	<div class="my-2">
		{{ form_label(form.picture) }}
		{{ form_widget(form.picture) }}
		{% if form.picture.vars.errors|length > 0 %}
			<div class="error">
				{{ form_errors(form.picture) }}
			</div>
		{% endif %}
	</div>
	<div class="my-2">
		{{ form_label(form.login) }}
		{{ form_widget(form.login) }}
