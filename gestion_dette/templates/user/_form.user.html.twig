	</div>

	<div class="my-2">
		{{ form_label(form.roles) }}
		{{ form_widget(form.roles) }}
		{% if form.roles.vars.errors|length > 0 %}
			<div class="error">
				{{ form_errors(form.roles) }}
			</div>
		{% endif %}
	</div>

	{{ form_end(form) }}
</div>
