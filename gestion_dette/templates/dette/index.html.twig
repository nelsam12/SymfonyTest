{% extends 'base.html.twig' %}

{% block title %}Hello DetteController!
{% endblock %}

{% block body %}
	<!-- Sidebar -->
	<div class="flex">
		{% include("partials/sideBar.html.twig") %}
		<!-- Main Content -->
		<div class="bg-white p-6 rounded-lg shadow-md mt-8 w-[80%] mx-auto">
			<h3 class="text-xl font-semibold text-gray-700 mb-4">Gestion des Dettes</h3>
			<div class="overflow-x-auto">
				<div class="mb-4  flex justify-end">
					<a href="{{path('dette.store')}}" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
						<i class="fas fa-plus mr-2"></i>
						Ajouter une Dette
					</a>
				</div>
				<table class="min-w-full table-auto border-collapse border border-gray-200">
					<thead class="bg-gray-100">
						<tr>
							<th class="py-2 px-4 border border-gray-200 text-left">Date</th>
							<th class="py-2 px-4 border border-gray-200 text-left">Montant Total</th>
							<th class="py-2 px-4 border border-gray-200 text-left">Montant Versé</th>
							<th class="py-2 px-4 border border-gray-200 text-left">Montant Restant</th>
							<th class="py-2 px-4 border border-gray-200 text-left">Statut</th>
							<th class="py-2 px-4 border border-gray-200 text-center">Actions</th>
						</tr>
						<tr>
							<td class="py-2 px-4 border border-gray-200">
								<input type="date" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500">
							</td>
							<td class="py-2 px-4 border border-gray-200">
								<input type="number" placeholder="Min montant" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500">
							</td>
							<td class="py-2 px-4 border border-gray-200">
								<input type="number" placeholder="Montant versé" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500">
							</td>
							<td class="py-2 px-4 border border-gray-200 text-center">—</td>
							<td class="py-2 px-4 border border-gray-200">
								<select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500">
									<option>Tout</option>
									<option>Non soldée</option>
									<option>Soldée</option>
								</select>
							</td>
							<td class="py-2 px-4 border border-gray-200 text-center">
								<button class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
									Filtrer
								</button>
							</td>
						</tr>
					</thead>
					<tbody>
						{% for dette in dettes %}


							<!-- Exemple de ligne dynamique -->
							<tr class="hover:bg-gray-50">
								<td class="py-2 px-4 border border-gray-200">2024-12-10</td>
								<td class="py-2 px-4 border border-gray-200">€1500</td>
								<td class="py-2 px-4 border border-gray-200">€1000</td>
								<td class="py-2 px-4 border border-gray-200">€500</td>
								<td class="py-2 px-4 border border-gray-200 text-red-500">
									<span class="bg-red-100 rounded-full px-3 py-1">Non soldée</span>
								</td>
								<td class="py-2 px-4 border border-gray-200 text-center">
									<button class="bg-green-500 text-white px-3 py-1 rounded-lg hover:bg-green-600">Payer</button>
									<button class="bg-yellow-500 text-white px-3 py-1 rounded-lg hover:bg-yellow-600">Modifier</button>
									<button class="bg-red-500 text-white px-3 py-1 rounded-lg hover:bg-red-600">Supprimer</button>
								</td>
							</tr>
						{% endfor %}
						<tr class="hover:bg-gray-50">
							<td class="py-2 px-4 border border-gray-200">2024-11-15</td>
							<td class="py-2 px-4 border border-gray-200">€500</td>
							<td class="py-2 px-4 border border-gray-200">€500</td>
							<td class="py-2 px-4 border border-gray-200">€0</td>
							<td class="py-2 px-4 border border-gray-200 text-green-500">
								<span class="bg-green-100 rounded-full px-3 py-1">Soldée</span>
							</td>
							<td class="py-2 px-4 border border-gray-200 text-center">
								<button class="bg-yellow-500 text-white px-3 py-1 rounded-lg hover:bg-yellow-600">Modifier</button>
								<button class="bg-red-500 text-white px-3 py-1 rounded-lg hover:bg-red-600">Supprimer</button>
							</td>
						</tr>
					</tbody>
				</table>
			</div>

		</div>
	</div>
{% endblock %}
